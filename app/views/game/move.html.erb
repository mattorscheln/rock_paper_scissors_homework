
      <table class="table table-hover table-striped">
        <tr>
          <th>When you played</th>
          <th>you won</th>
          <th>you lost</th>
          <th>you tied</th>
        </tr>

        <tr>
          <td>rock</td>
          <td><%= @all_moves.where(user_move: 'rock', user_wins: 1).count %></td>
          <td><%= @all_moves.where(user_move: 'rock', computer_wins: 1).count %></td>
          <td><%= @all_moves.where(user_move: 'rock', tie: 1).count %></td>
        </tr>

        <tr>
          <td>paper</td>
          <td><%= @all_moves.where(user_move: 'paper', user_wins: 1).count %></td>
          <td><%= @all_moves.where(user_move: 'paper', computer_wins: 1).count %></td>
          <td><%= @all_moves.where(user_move: 'paper', tie: 1).count %></td>
        </tr>

        <tr>
          <td>scissors</td>
          <td><%= @all_moves.where(user_move: 'scissors', user_wins: 1).count %></td>
          <td><%= @all_moves.where(user_move: 'scissors', computer_wins: 1).count %></td>
          <td><%= @all_moves.where(user_move: 'scissors', tie: 1).count %></td>
        </tr>

        <tr>
          <th>Total</th>
          <th><%= @all_moves.sum(:user_wins) %></th>
          <th><%= @all_moves.sum(:computer_wins) %></th>
          <th><%= @all_moves.sum(:tie) %></th>
        </tr>
      </table>
    </div>


    <div class="panel panel-info">
      <div class="panel-heading">
        <h5 class="panel-title">
          Complete history
          (<%= @all_moves.count %>)
        </h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>User Move</th>
          <th>Computer Move</th>
          <th>User Wins</th>
          <th>Computer Wins</th>
          <th>Tie</th>
        </tr>

		  <% @all_moves.each do |result| %>
		    <tr>
		      <td>
		        <%= result.user_move %>
		      </td>

		      <td>
		        <%= result.computer_move %>
		      </td>

		      <td>
		        <%= result.user_wins %>
		      </td>

		      <td>
		        <%= result.computer_wins %>
		      </td>

		      <td>
		        <%= result.tie %>
		      </td>

		    </tr>
		  <% end %>
      </table>
    </div>
  </div>
</div>

</div>

